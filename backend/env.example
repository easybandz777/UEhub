# UE Hub Backend Configuration

# Application
APP_NAME=UE Hub
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
API_PREFIX=/v1

# Security
SECRET_KEY=your-super-secret-key-here-minimum-32-characters-long
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/uehub
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_HOSTS=*

# Storage
STORAGE_BACKEND=local
STORAGE_LOCAL_PATH=./uploads

# S3 Storage (if using S3)
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key
# S3_ENDPOINT_URL=https://s3.amazonaws.com

# Email
MAIL_BACKEND=console
MAIL_FROM_EMAIL=noreply@uehub.com
MAIL_FROM_NAME=UE Hub

# Resend (if using Resend for email)
# RESEND_API_KEY=your-resend-api-key

# Observability
LOG_LEVEL=INFO
# SENTRY_DSN=your-sentry-dsn

# Features
ENABLE_DOCS=true
ENABLE_METRICS=true
