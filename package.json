{
  "name": "ue-hub",
  "version": "1.0.0",
  "description": "Upper Echelon Hub - Modular inventory and OSHA training system",
  "private": true,
  "workspaces": [
    "packages/*",
    "frontend",
    "backend"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean",
    "api": "cd backend && python -m uvicorn app.api:app --reload --host 0.0.0.0 --port 8000",
    "migrate": "cd backend && alembic upgrade head",
    "seed": "cd backend && python -m app.scripts.seed",
    "worker": "cd worker && python main.py",
    "sdk": "cd backend && python -m app.scripts.generate_sdk"
  },
  "devDependencies": {
    "turbo": "^1.10.16",
    "@types/node": "^20.8.0",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@8.10.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
